{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "esModuleInterop": true,
    "removeComments": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSources":true,
    "inlineSourceMap":true,
    "noEmitHelpers": false,
    "noImplicitAny": false,
    "outDir": "./build",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true
  },
  "filesGlob": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
